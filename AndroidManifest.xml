<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.eduardomaia.smsmarketing"
    android:versionCode="1"
    android:versionName="1.0" >

	<uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    
    <!-- MAYBE LATER TO SAVE A LOG ON DISK
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    -->
    
    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.eduardomaia.smsmarketing.MainActivity"
            android:label="@string/app_name" 
            android:screenOrientation="portrait"> <!-- do not switch to landscape -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AndroidExplorer"
            android:label="Load file" 
            android:screenOrientation="portrait"> <!-- do not switch to landscape -->
        </activity>        
        <activity
            android:name=".Settings"
            android:label="Settings" 
            android:screenOrientation="portrait"> <!-- do not switch to landscape -->
        </activity>        
        </application>

</manifest>
